# #!/usr/bin/env sh
# . "$(dirname -- "$0")/_/husky.sh"

# Validate commit message format
# Example: feat: add user authentication
# Types: feat, fix, docs, style, refactor, test, chore

commit_msg=$(cat "$1")

# Check if commit message follows conventional commits format
if ! echo "$commit_msg" | grep -qE "^(feat|fix|docs|style|refactor|test|chore|perf|ci|build|revert)(\(.+\))?: .{1,}"; then
  echo "‚ùå Invalid commit message format!"
  echo ""
  echo "Commit message should follow this format:"
  echo "  <type>: <description>"
  echo ""
  echo "Types: feat, fix, docs, style, refactor, test, chore, perf, ci, build, revert, important, update, remove"
  echo ""
  echo "Examples:"
  echo "  feat: add GitHub OAuth authentication"
  echo "  fix: resolve state mismatch error in OAuth"
  echo "  docs: update README with setup instructions"
  echo "  refactor: simplify user service logic"
  echo "  chore: update package.json dependencies"
  echo "  perf: improve performance of user authentication"
  echo "  ci: add GitHub Actions workflow for CI/CD"
  echo "  build: update build script for production deployment"
  echo "  revert: revert previous commit"
  echo "  style: update commit message format"
  echo "  important: commit message should be in English"
  echo "  update: improve features or configurations"
  echo "  remove: remove comments or code"
  exit 1
fi

